import java.util.*;
import java.io.*;

public class ProgsisP1
{
	Scanner Leer=new Scanner(System.in);
	String ruta, texto, archivo,Archivo_Instrucciones,Archivo_Error;
	boolean fin;
	int linea =0;

	public ProgsisP1(String r)
	{
		ruta=r;
	}

	public void validarRuta()
	{
		File fichero = new File(ruta);
        if (fichero.exists())
        {
        	if(fichero.getName().endsWith(".asm") || fichero.getName().endsWith(".ASM"))
        	{
        	    crearArchivos();
        	    leerArchivo();  
        	}
            else
            {
        		System.out.println("El archivo no tiene la extensión .ASM");
        	}       	
        }          
        else
        {
        	System.out.println("La ruta no existe");
        }
     }
    
	public void crearArchivos()
	{		
		File fichero = new File(ruta);
		Archivo_Instrucciones=fichero.getName().substring(0,fichero.getName().indexOf('.'))+".INST";
		Archivo_Error=fichero.getName().substring(0,fichero.getName().indexOf('.'))+".ERR";
		File inst = new File(Archivo_Instrucciones);
		File err = new File(Archivo_Error);
		if(inst.exists())
		{
			inst.delete();
		}
		if(err.exists())
		{
			err.delete();
		}
		try
		{
			RandomAccessFile archinst=new RandomAccessFile("Archivo_Instrucciones.txt","rw");
			archinst.seek(0);
			archinst.writeUTF("      LINEA      ETQ      CODOP      OPER");
			archinst.writeUTF("\r\n----------------------------------------------------\r\n");	
			archinst.close();
		}
		catch(IOException ioe)
		{
			System.out.println("Error al crear archivo de instrucciones");
		}	       
	    try
	    {
			RandomAccessFile archierr=new RandomAccessFile("Archivo_Error.txt","rw");
			archierr.seek(0);
			archierr.writeUTF("                   ERRORES                     ");	
			archierr.writeUTF("\r\n----------------------------------------------------\r\n");	
			archierr.close();
		}
	    catch(IOException ioe)
	    {
	    	System.out.println("Error al crear el archivo de errores");
	    }
	}

	public void leerArchivo() 
	{		
		try
		{
			RandomAccessFile archivo_asm=new RandomAccessFile(new File(ruta),"r");
			while(archivo_asm.getFilePointer()!=archivo_asm.length() && !fin)
			{
				texto=archivo_asm.readLine();
				linea++;
				System.out.println("Revisando linea no: "+linea);
				revisarLinea();
			}
			if(!fin)
			{
				escribirError("No hay Fin",Archivo_Error);
			}
			archivo_asm.close();
	    }
        catch(IOException e)
        {
	      System.out.println("Error al leer el archivo");
        }
	}

    public void revisarLinea()
    {
    	Linea lin= new Linea(linea,Archivo_Error);     		   	
    	String etiq,codop,oper;
        int contador, estado, tamaño;
        char[] cad = texto.toCharArray();
        boolean eti, cod, op;
        
        etiq=null; 
        codop=null; 
        oper=null;
        contador=0; 
        estado=0; 
        tamaño=texto.length();
        System.out.println("La linea mide"+tamaño);
        eti=false;
        cod=false;
        op=false;
        
         while(estado != 10)
         {
        	switch(estado)
        	{
	    		case 0:
	    			if(contador==tamaño)
	    			{
	    				estado=10;
	    			}
	    			else if(cad[contador]==';')
	    			{
	    				estado=1;
	    				contador++;
				    }
					else if(cad[contador]==' ' || cad[contador]=='	')
					{
						estado=4;
						etiq="NULL";
						eti=true;
						contador++;
					}
					else
					{	
						etiq=cad[contador]+"";
						contador++;
						estado=3;
					}	
			     break;
    		     case 1:
    		    	 if(tamaño==contador)
    		     	 {
    		    		 estado=10;
    		     	 }
    		     	 else
    		     	 {
    		     		 contador++;
    		     		 estado=2;
    		     	 }  				
     	         break;
     	         case 2:
     	        	 if(tamaño==contador)
	   		     	 {
	   		    		 estado=10;
	   		     	 }
	   		     	 else
	   		     	 {
	   		     		contador++;
	   		     		 estado=2;
	   		     	 }  
     	         break;
     	         case 3:
     	         	if(contador==tamaño)
     	         	{
     	         		escribirError(linea +" No hay Codigo de operacion \r\n",Archivo_Error);
     	         		estado=10;
     	         	}
     	         	else if(cad[contador]==';')
     	         	{
 	         			escribirError("Linea "+ linea+ "No hay codigo de operacion",Archivo_Error);
 	         			estado=1;
 	         			contador++;
     	         	}
     	         	else if(cad[contador]==' ' || cad[contador]=='	')
     	         	{
     	         		eti=lin.validarEtiqueta(etiq);
     	         		contador++;
     	         		estado=5;
     	         	}
     	         	else
     	         	{
     	         		etiq+=cad[contador];
     	         		contador++;
         		        estado=3;
     	         	}		
     	         break;
     	         case 4:
     	        	 if(tamaño==contador)
     	        	 {
     	        		 estado=10;
	 	         	 }
     	         	 else if(cad[contador]==';')
     	         	 {
	     	         	 estado=1;
	     	         	 contador++;
     	         	 }
     	         	 else if(cad[contador]==' ' || cad[contador]=='	')
     	         	 {
	         			 contador++;
	         			 estado=4;
     	         	 }
     	         	 else
     	         	 {
     	         		 if((cad[contador]=='E'||cad[contador]=='e')&& (contador+3)<=tamaño)
	         			 {
     	         			 String subStr=texto.substring(contador, contador+3);
     	         			 if(subStr.toUpperCase().equals("END"))
     	         			 {
     	         				fin=true;
     	         				 estado=10;
     	         			 }   	
	         			 }
     	         		 if(!fin)
     	         		 {
     	         			 codop=cad[contador]+"";
     	         			 contador++;
     	         			 estado=6;
     	         		 }	
     	         	 }   	         			
     	         break;
     	         case 5:
     	        	 if(tamaño==contador)
     	        	 {
	 	         		 escribirError("Linea "+ linea+" No hay codigo de operacion ",Archivo_Error);
	 	                 estado=10;
     	         	 }
     	         	 else if(cad[contador]==';')
     	         	 {
     	         		 escribirError("Linea "+ linea+" No hay codigo de operacion ",Archivo_Error);
     	                 estado=1;
     	                 contador++;	
     	         	 }
     	         	 else if(cad[contador]==' '|| cad[contador]=='	')
     	         	 {
     	         		 contador++;
     	         		 estado=5;
     	         	 }
     	         	 else
     	         	 {
     	         		 codop=cad[contador]+"";
     	         		 estado=6;
     	         		 contador++;
     	         	 }		
     	         break;
     	         case 6:
     	        	 if(tamaño==contador)
     	        	 {
     	        		 cod=lin.validarCodigo(codop);
     	        		 estado=10;
     	        		 op=true;
     	        		 oper="NULL";
     	        	 }
     	        	 else if(cad[contador]==';')
     	        	 {
     	        		 estado=1;
	     	         	 cod=lin.validarCodigo(codop);
	     	         	 op=true;
	     	         	 oper="NULL";
     	         	 }	
     	         	 else if(cad[contador]==' '|| cad[contador]=='	')
     	         	 {
     	         		 cod=lin.validarCodigo(codop);
     	         		 contador++;
     	         		 estado=7;
     	         	 }
     	         	 else
     	         	 {
     	         		 codop=codop+cad[contador];
     	         		 estado=6;
     	         		 contador++;
     	         	 }
     	         break;
     	         case 7:
     	        	 if(tamaño==contador)
     	         	 {
     	        		 oper="NULL";
     	         		 op=true;
     	         	 }
     	         	 else if(cad[contador]==' '|| cad[contador]=='	')
     	         	 {
     	         		 contador++;
     	         		 estado=7;
     	         	 }
     	         	 else if(cad[contador]==';')
     	         	 {
	         			 contador++;
	         		 	 estado=1;
	         		 	 op=true;
	         			 oper="NULL";
     	         	 }
     	         	 else
     	         	 {
     	         		 oper=cad[contador]+"";
     	         		 contador++;
     	         		 estado=8;
     	         	 }    	         	
     	         break;
     	         case 8:
     	        	 if(tamaño==contador)
     	        	 {
     	        		 op=lin.validarOperando(oper);
     	         		 estado=10;
     	         	 }
     	         	 else if(cad[contador]==';')
     	         	 {
     	         		 op=lin.validarOperando(oper);
     	         		 estado=1;
     	         		 contador++;
     	         	 }
     	         	 else if(cad[contador]==' ' || cad[contador]=='	')
     	         	 {
     	         		op=lin.validarOperando(oper);
     	         		contador++;
     	         		estado=9;
     	         	 }
     	         	 else if(cad[contador]==';')
     	         	 {
     	         		 op=lin.validarOperando(oper);
     	         		 contador++;
     	         		 estado=1;
     	         	 }
     	         	 else
     	         	 {
     	         		 oper+=cad[contador];
     	         		 contador++;
     	         	 }		
     	         break;
     	         case 9:
     	        	 if(tamaño==contador)
     	        	 {
     	         		 estado=10;
     	         	 }
     	         	 else if(cad[contador]==' ' || cad[contador]=='	')
     	         	 {
     	         		 contador++;
     	         	 }
     	         	 else if(cad[contador]==';')
     	         	 {
     	         		 contador++;
     	         		 estado=1;
     	         	 }
     	         break;       
        	}	
         }
	     if((eti && cod) && op)
	     {
	    	 System.out.println("linea "+linea+" Linea correcta");
	    	 escribirInstruccion("	"+ linea+  "	"+ etiq+"	"+codop+"	"+oper+"\r\n");
	     }
	     else
	     {
	    	 System.out.println("linea "+linea+" Linea no correcta");
	     }
    }
    
    public void escribirError(String error, String archi)
    {
    	Archivo_Error=archi;
    	try
    	{
			RandomAccessFile archierr=new RandomAccessFile(Archivo_Error,"rw");
			archierr.seek(archierr.length());
			archierr.writeUTF(error);	
			archierr.close();
		}
	    catch(IOException e)
	    {
		    System.out.println("Error al escribir el error");
	    }
    }  
    	 
    public void escribirInstruccion(String instruccion)
    {
    	try
    	{
    		RandomAccessFile archinst=new RandomAccessFile(Archivo_Instrucciones,"rw");
    		archinst.seek(archinst.length());
			archinst.writeUTF(instruccion);	
			archinst.close();
		}
	    catch(IOException e)
	    {
		    System.out.println("Error al escribir la instrucción");
	    }
    }
       
    public static void main(String[] args)
    {
    	Scanner Leer=new Scanner(System.in);
    	String ruta;
    	System.out.println("Ingresa la ruta del archivo(extensión .ASM)");
    	ruta=Leer.nextLine();
    	ProgsisP1 programa= new ProgsisP1(ruta);
    	programa.validarRuta();	
    	System.out.println("Operacion completada");
    }
}